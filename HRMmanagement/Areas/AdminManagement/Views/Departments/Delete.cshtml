@model HRMmanagement.Models.Department

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fa fa-trash-o"></i> Xóa Phòng ban</h1>

<h3 style="color: #f7941c;"><i class="fa fa-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa phòng ban này?</h3>
<div>
    <h4 style="color: #213d86;"><i class="fa fa-building"></i> Thông tin Phòng ban</h4>
    <hr style="border-top: 1px solid #00adef;" />
    <dl class="row">
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-tag"></i> @Html.DisplayNameFor(model => model.DepartmentName)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-info-circle"></i> @Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DepartmentId" />
        <button type="submit" value="Delete" class="btn btn-danger" style="background-color: #00984b; border-color: #00984b;"><i class="fa fa-trash"></i> Xóa</button> |
        <a asp-action="Index" style="color: #213d86;"><i class="fa fa-arrow-left"></i> Trở về danh sách</a>
    </form>
</div>