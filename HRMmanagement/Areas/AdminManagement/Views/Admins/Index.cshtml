@model IEnumerable<HRMmanagement.Models.Admin>

@{
    ViewData["Title"] = "Quản Lý Admin";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fas fa-users-cog"></i> Quản Lý Admin</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" style="background-color: #00adef; border-color: #00adef;">
        <i class="fas fa-plus"></i> Thêm Mới
    </a>
</p>
<table class="table">
    <thead style="background-color: #f8f9fa;">
        <tr style="color: #213d86;">
            <th><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Username)</th>
            <th><i class="fas fa-key"></i> @Html.DisplayNameFor(model => model.Password)</th>
            <th><i class="fas fa-id-card"></i> @Html.DisplayNameFor(model => model.FullName)</th>
            <th><i class="fas fa-envelope"></i> @Html.DisplayNameFor(model => model.Email)</th>
            <th><i class="fas fa-phone"></i> @Html.DisplayNameFor(model => model.Phone)</th>
            <th><i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AdminId" class="btn btn-sm btn-outline-primary" style="color: #213d86; border-color: #00adef;">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <a asp-action="Details" asp-route-id="@item.AdminId" class="btn btn-sm btn-outline-info" style="color: #213d86; border-color: #00adef;">
                        <i class="fas fa-info-circle"></i> Chi Tiết
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.AdminId" class="btn btn-sm btn-outline-danger" style="color: #213d86; border-color: #f7941c;">
                        <i class="fas fa-trash-alt"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

