@model HRMmanagement.Models.Admin

@{
    ViewData["Title"] = "Xóa Admin";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fas fa-trash-alt"></i> Xóa Admin</h1>

<h3 style="color: #f7941c;">Bạn có chắc chắn muốn xóa Admin này?</h3>
<div>
    <h4>Thông Tin Admin</h4>
    <hr style="border-top: 2px solid #00adef;" />
    <dl class="row">
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Username)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Username)</dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-key"></i> @Html.DisplayNameFor(model => model.Password)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Password)</dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-id-card"></i> @Html.DisplayNameFor(model => model.FullName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-envelope"></i> @Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-phone"></i> @Html.DisplayNameFor(model => model.Phone)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone)</dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.CreatedAt)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedAt)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AdminId" />
        <input type="submit" value="Xóa" class="btn btn-danger" style="background-color: #f7941c; border-color: #f7941c;" /> 
        <a asp-action="Index" style="color: #00adef; text-decoration: none;"><i class="fas fa-arrow-left"></i> Trở lại danh sách</a>
    </form>
</div>

