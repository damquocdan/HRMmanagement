@model IEnumerable<HRMmanagement.Models.Training>

@{
    ViewData["Title"] = "Danh sách Đào tạo";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fas fa-graduation-cap"></i> Danh sách Đào tạo</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" style="background-color: #00adef; border-color: #00adef;">
        <i class="fas fa-plus"></i> Thêm mới
    </a>
</p>
<table class="table">
    <thead style="background-color: #f8f9fa;">
        <tr>
            <th style="color: #213d86;"><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Employee)</th>
            <th style="color: #213d86;"><i class="fas fa-chalkboard-teacher"></i> @Html.DisplayNameFor(model => model.TrainingName)</th>
            <th style="color: #213d86;"><i class="far fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.StartDate)</th>
            <th style="color: #213d86;"><i class="far fa-calendar-check"></i> @Html.DisplayNameFor(model => model.EndDate)</th>
            <th style="color: #213d86;"><i class="fas fa-check-circle"></i> @Html.DisplayNameFor(model => model.Result)</th>
            <th style="color: #213d86;"><i class="far fa-comment-dots"></i> @Html.DisplayNameFor(model => model.Evaluation)</th>
            <th style="color: #213d86;"><i class="far fa-clock"></i> @Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderByDescending(m => m.CreatedAt))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrainingName)
                </td>
                <td>
                    @item.StartDate?.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @item.EndDate?.ToString("dd/MM/yyyy")
                </td>
                <td>
                    <select class="status-select" data-id="@item.TrainingId" onchange="updateResult(@item.TrainingId, this.value)">
                        <option value="Đạt" selected="@(item.Result == "Đạt")">Đạt</option>
                        <option value="Trượt" selected="@(item.Result == "Trượt")">Trượt</option>
                    </select>
                </td>
                <td>
                    <input type="text" class="evaluation-input" data-id="@item.TrainingId" value="@item.Evaluation" onblur="updateEvaluation(@item.TrainingId, this.value)" placeholder="Đánh giá" />
                </td>
                <td>
                    @item.CreatedAt?.ToString("dd/MM/yyyy")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TrainingId" class="btn btn-sm btn-outline-primary" style="color: #213d86; border-color: #00adef;">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <a asp-action="Details" asp-route-id="@item.TrainingId" class="btn btn-sm btn-outline-info" style="color: #213d86; border-color: #00adef;">
                        <i class="fas fa-info-circle"></i> Chi tiết
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.TrainingId" class="btn btn-sm btn-outline-danger" style="color: #213d86; border-color: #f7941c;">
                        <i class="fas fa-trash-alt"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function updateResult(trainingId, result) {
        $.ajax({
            url: '/AdminManagement/Trainings/UpdateResult',
            type: 'POST',
            data: { id: trainingId, result: result },
            success: function(response) {
                if (response.success) {
                    alert('Cập nhật kết quả thành công!');
                } else {
                    alert('Cập nhật kết quả thất bại: ' + response.message);
                }
            },
            error: function() {
                alert('Đã xảy ra lỗi khi cập nhật kết quả.');
            }
        });
    }

    function updateEvaluation(trainingId, evaluation) {
        $.ajax({
            url: '/AdminManagement/Trainings/UpdateEvaluation',
            type: 'POST',
            data: { id: trainingId, evaluation: evaluation },
            success: function(response) {
                if (response.success) {
                    alert('Cập nhật đánh giá thành công!');
                } else {
                    alert('Cập nhật đánh giá thất bại: ' + response.message);
                }
            },
            error: function() {
                alert('Đã xảy ra lỗi khi cập nhật đánh giá.');
            }
        });
    }
</script>