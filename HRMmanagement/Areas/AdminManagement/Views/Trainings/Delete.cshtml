@model HRMmanagement.Models.Training

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fas fa-trash-alt"></i> Xóa Khóa Đào tạo</h1>

<h3 style="color: #213d86;">Bạn có chắc chắn muốn xóa khóa đào tạo này?</h3>
<div>
    <h4 style="color: #213d86;"><i class="fas fa-chalkboard-teacher"></i> Thông tin Khóa Đào tạo</h4>
    <hr style="border-top: 1px solid #00adef;" />
    <dl class="row">
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-chalkboard-teacher"></i> @Html.DisplayNameFor(model => model.TrainingName)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainingName)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="far fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.StartDate)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="far fa-calendar-check"></i> @Html.DisplayNameFor(model => model.EndDate)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-check-circle"></i> @Html.DisplayNameFor(model => model.Result)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Result)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="far fa-comment-dots"></i> @Html.DisplayNameFor(model => model.Evaluation)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Evaluation)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="far fa-clock"></i> @Html.DisplayNameFor(model => model.CreatedAt)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Employee)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.FullName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TrainingId" />
        <button type="submit" value="Xóa" class="btn btn-danger" style="background-color: #00984b; border-color: #00984b;">
            <i class="fas fa-trash-alt"></i> Xóa
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary" style="color: #213d86; border-color: #6c757d;">
            <i class="fas fa-arrow-left"></i> Trở về Danh sách
        </a>
    </form>
</div>

