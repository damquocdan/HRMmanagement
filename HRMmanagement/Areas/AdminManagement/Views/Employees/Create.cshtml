@model HRMmanagement.Models.Employee

@{
    ViewData["Title"] = "Thêm Nhân Viên";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fa fa-user-plus"></i> Thêm Nhân Viên Mới</h1>

<h4 style="color: #213d86;"><i class="fa fa-info-circle"></i> Nhập Thông Tin Nhân Viên</h4>
<hr style="border-top: 2px solid #00adef;" />

<div class="row">
    <form asp-action="Create" class="row g-3">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"
                 style="border: 1px solid #f7941c; padding: 10px; border-radius: 5px; background-color: #fff;"></div>

            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label text-primary">
                    <i class="fa fa-id-card"></i> Họ và tên
                </label>
                <input asp-for="FullName" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DateOfBirth" class="form-label text-primary">
                    <i class="fa fa-calendar"></i> Ngày sinh
                </label>
                <input asp-for="DateOfBirth" type="date" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Gender" class="form-label text-primary">
                    <i class="fa fa-venus-mars"></i> Giới tính
                </label>
                <input asp-for="Gender" class="form-control" placeholder="Nam/Nữ" style="border: 1px solid #00adef;" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Address" class="form-label text-primary">
                    <i class="fa fa-map-marker-alt"></i> Địa chỉ
                </label>
                <input asp-for="Address" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="Phone" class="form-label text-primary">
                    <i class="fa fa-phone"></i> Số điện thoại
                </label>
                <input asp-for="Phone" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label text-primary">
                    <i class="fa fa-envelope"></i> Email
                </label>
                <input asp-for="Email" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DepartmentId" class="form-label text-primary">
                    <i class="fa fa-building"></i> Phòng ban
                </label>
                <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId" style="border: 1px solid #00adef;"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PositionId" class="form-label text-primary">
                    <i class="fa fa-briefcase"></i> Vị trí
                </label>
                <select asp-for="PositionId" class="form-control" asp-items="ViewBag.PositionId" style="border: 1px solid #00adef;"></select>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="BaseSalary" class="form-label text-primary">
                    <i class="fa fa-money-bill-wave"></i> Lương cơ bản
                </label>
                <input asp-for="BaseSalary" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="BaseSalary" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ContractStartDate" class="form-label text-primary">
                    <i class="fa fa-calendar-check"></i> Ngày bắt đầu hợp đồng
                </label>
                <input asp-for="ContractStartDate" type="date" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="ContractStartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ContractEndDate" class="form-label text-primary">
                    <i class="fa fa-calendar-times"></i> Ngày kết thúc hợp đồng
                </label>
                <input asp-for="ContractEndDate" type="date" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="ContractEndDate" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary w-100" style="background-color: #00adef; border-color: #00adef;">
                    <i class="fa fa-save"></i> Lưu Nhân Viên
                </button>
            </div>
        </div>
    </form>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fa fa-arrow-left"></i> Quay lại danh sách
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
