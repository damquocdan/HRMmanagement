@model HRMmanagement.Models.Employee

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fa fa-trash-o"></i> Xóa</h1>

<h3 style="color: #f7941c;"><i class="fa fa-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa nhân viên này?</h3>
<div>
    <h4 style="color: #213d86;"><i class="fa fa-user"></i> Thông tin Nhân viên</h4>
    <hr style="border-top: 1px solid #00adef;" />
    <dl class="row">
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-id-card-o"></i> @Html.DisplayNameFor(model => model.FullName)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-calendar"></i> @Html.DisplayNameFor(model => model.DateOfBirth)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-venus-mars"></i> @Html.DisplayNameFor(model => model.Gender)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-map-marker"></i> @Html.DisplayNameFor(model => model.Address)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-phone"></i> @Html.DisplayNameFor(model => model.Phone)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-envelope"></i> @Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-money"></i> @Html.DisplayNameFor(model => model.BaseSalary)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BaseSalary)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-file-text-o"></i> @Html.DisplayNameFor(model => model.ContractStartDate)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContractStartDate)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-file-text"></i> @Html.DisplayNameFor(model => model.ContractEndDate)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContractEndDate)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-clock-o"></i> @Html.DisplayNameFor(model => model.CreatedAt)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-qrcode"></i> @Html.DisplayNameFor(model => model.QrcodeData)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QrcodeData)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-building-o"></i> @Html.DisplayNameFor(model => model.Department)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.DepartmentName)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-briefcase"></i> @Html.DisplayNameFor(model => model.Position)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position.PositionName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EmployeeId" />
        <input type="submit" value="Xóa" class="btn btn-danger" style="background-color: #00984b; border-color: #00984b;" /> |
        <a asp-action="Index" style="color: #213d86;"><i class="fa fa-arrow-left"></i> Trở về danh sách</a>
    </form>
</div>