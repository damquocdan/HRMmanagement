@model HRMmanagement.Models.LeaveRequest

@{
    ViewData["Title"] = "Chi Tiết";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fas fa-info-circle"></i> Chi Tiết</h1>

<div>
    <h4 style="color: #213d86;">Yêu Cầu Nghỉ Phép</h4>
    <hr style="border-top: 1px solid #00adef;" />
    <dl class="row">
        <dt class="col-sm-2" style="color: #213d86;"><i class="far fa-calendar-alt"></i> Loại Nghỉ</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveType)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="far fa-calendar-check"></i> Ngày Bắt Đầu</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="far fa-calendar-times"></i> Ngày Kết Thúc</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-file-alt"></i> Lý Do</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reason)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-check-circle"></i> Trạng Thái</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="far fa-clock"></i> Ngày Tạo</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-user"></i> Nhân Viên</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.EmployeeId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.LeaveId" class="btn btn-primary" style="background-color: #00adef; border-color: #00adef;"><i class="fas fa-edit"></i> Sửa</a> |
    <a asp-action="Index" class="btn btn-secondary" style="color: #213d86;"><i class="fas fa-arrow-left"></i> Quay lại Danh sách</a>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">