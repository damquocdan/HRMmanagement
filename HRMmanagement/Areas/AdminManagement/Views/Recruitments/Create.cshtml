@model HRMmanagement.Models.Recruitment

@{
    ViewData["Title"] = "Tạo mới";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fas fa-plus-circle"></i> Tạo mới Ứng viên</h1>

<h4 style="color: #213d86;"><i class="far fa-file-alt"></i> Thông tin Ứng viên</h4>
<hr style="border-top: 1px solid #00adef;" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="border: 1px solid #f7941c; padding: 10px; border-radius: 5px; background-color: #fff3cd; color: #85640a;"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label" style="color: #213d86;"><i class="fas fa-id-card"></i> Họ và tên</label>
                <input asp-for="FullName" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label" style="color: #213d86;"><i class="far fa-envelope"></i> Email</label>
                <input asp-for="Email" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label" style="color: #213d86;"><i class="fas fa-phone"></i> Điện thoại</label>
                <input asp-for="Phone" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppliedPositionId" class="control-label" style="color: #213d86;"><i class="fas fa-briefcase"></i> Vị trí ứng tuyển</label>
                <select asp-for="AppliedPositionId" class="form-control" asp-items="ViewBag.AppliedPositionId" style="border: 1px solid #00adef;"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cvpath" class="control-label" style="color: #213d86;"><i class="far fa-file-pdf"></i> CV</label>
                <input asp-for="Cvpath" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="Cvpath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InterviewDate" class="control-label" style="color: #213d86;"><i class="far fa-calendar-alt"></i> Ngày phỏng vấn</label>
                <input asp-for="InterviewDate" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="InterviewDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label" style="color: #213d86;"><i class="fas fa-info-circle"></i> Trạng thái</label>
                <input asp-for="Status" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Tạo" class="btn btn-primary" style="background-color: #00984b; border-color: #00984b;">
                    <i class="fas fa-save"></i> Lưu
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color: #213d86;">
        <i class="fas fa-arrow-left"></i> Trở về Danh sách
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

