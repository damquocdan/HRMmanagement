@model HRMmanagement.Models.Position

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fa fa-trash-o"></i> Xóa Vị trí</h1>

<h3 style="color: #f7941c;"><i class="fa fa-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa vị trí này?</h3>
<div>
    <h4 style="color: #213d86;"><i class="fa fa-briefcase"></i> Thông tin Vị trí</h4>
    <hr style="border-top: 1px solid #00adef;" />
    <dl class="row">
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-id-card-o"></i> @Html.DisplayNameFor(model => model.PositionName)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PositionName)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-info-circle"></i> @Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PositionId" />
        <button type="submit" value="Xóa" class="btn btn-danger" style="background-color: #00984b; border-color: #00984b;"><i class="fa fa-trash"></i> Xóa</button> |
        <a asp-action="Index" style="color: #213d86;"><i class="fa fa-arrow-left"></i> Trở về danh sách</a>
    </form>
</div>