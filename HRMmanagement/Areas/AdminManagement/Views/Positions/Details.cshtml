@model HRMmanagement.Models.Position

@{
    ViewData["Title"] = "Chi tiết";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fa fa-eye"></i> Chi tiết Vị trí</h1>

<div>
    <h4 style="color: #213d86;"><i class="fa fa-briefcase"></i> Thông tin Vị trí</h4>
    <hr style="border-top: 1px solid #00adef;" />
    <dl class="row">
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-id-card-o"></i> @Html.DisplayNameFor(model => model.PositionName)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PositionName)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fa fa-info-circle"></i> @Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PositionId" class="btn btn-sm btn-primary" style="background-color: #00adef; border-color: #00adef;"><i class="fa fa-pencil"></i> Sửa</a> |
    <a asp-action="Index" style="color: #213d86;"><i class="fa fa-arrow-left"></i> Trở về danh sách</a>
</div>