@model HRMmanagement.Models.Payroll

@{
    ViewData["Title"] = "Chỉnh Sửa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fas fa-edit"></i> Chỉnh Sửa</h1>

<h4 style="color: #213d86;">Bảng Lương</h4>
<hr style="border-top: 1px solid #00adef;" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PayrollId" />
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label" style="color: #213d86;"><i class="fas fa-user"></i> Nhân Viên</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Month" class="control-label" style="color: #213d86;"><i class="far fa-calendar-alt"></i> Tháng</label>
                <input asp-for="Month" class="form-control" />
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label" style="color: #213d86;"><i class="far fa-calendar"></i> Năm</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label" style="color: #213d86;"><i class="fas fa-coins"></i> Lương Cơ Bản</label>
                <input asp-for="BaseSalary" class="form-control" />
                <span asp-validation-for="BaseSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Allowance" class="control-label" style="color: #213d86;"><i class="fas fa-piggy-bank"></i> Phụ Cấp</label>
                <input asp-for="Allowance" class="form-control" />
                <span asp-validation-for="Allowance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bonus" class="control-label" style="color: #213d86;"><i class="fas fa-gift"></i> Thưởng</label>
                <input asp-for="Bonus" class="form-control" />
                <span asp-validation-for="Bonus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tax" class="control-label" style="color: #f7941c;"><i class="fas fa-percentage"></i> Thuế</label>
                <input asp-for="Tax" class="form-control" />
                <span asp-validation-for="Tax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insurance" class="control-label" style="color: #213d86;"><i class="fas fa-shield-alt"></i> Bảo Hiểm</label>
                <input asp-for="Insurance" class="form-control" />
                <span asp-validation-for="Insurance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NetSalary" class="control-label" style="color: #00984b;"><i class="fas fa-money-bill-alt"></i> Lương Thực Nhận</label>
                <input asp-for="NetSalary" class="form-control" />
                <span asp-validation-for="NetSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label" style="color: #213d86;"><i class="far fa-clock"></i> Ngày Tạo</label>
                <input asp-for="CreatedAt" class="form-control" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-primary" style="background-color: #00adef; border-color: #00adef;"><i class="fas fa-save"></i> Lưu</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary" style="color: #213d86;"><i class="fas fa-arrow-left"></i> Quay lại Danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">