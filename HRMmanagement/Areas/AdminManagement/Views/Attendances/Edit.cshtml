@model HRMmanagement.Models.Attendance

@{
    ViewData["Title"] = "Chỉnh sửa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fa fa-pencil-square-o"></i> Chỉnh sửa Chấm công</h1>

<h4 style="color: #213d86;"><i class="fa fa-calendar-check-o"></i> Thông tin Chấm công</h4>
<hr style="border-top: 1px solid #00adef;" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="border: 1px solid #f7941c; padding: 10px; border-radius: 5px; background-color: #fff;"></div>
            <input type="hidden" asp-for="AttendanceId" />
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label" style="color: #213d86;"><i class="fa fa-user"></i> Nhân viên</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId" style="border: 1px solid #00adef;"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttendanceDate" class="control-label" style="color: #213d86;"><i class="fa fa-calendar"></i> Ngày chấm công</label>
                <input asp-for="AttendanceDate" class="form-control" type="date" style="border: 1px solid #00adef;" />
                <span asp-validation-for="AttendanceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckInTime" class="control-label" style="color: #213d86;"><i class="fa fa-sign-in"></i> Thời gian vào</label>
                <input asp-for="CheckInTime" class="form-control" type="time" style="border: 1px solid #00adef;" />
                <span asp-validation-for="CheckInTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckOutTime" class="control-label" style="color: #213d86;"><i class="fa fa-sign-out"></i> Thời gian ra</label>
                <input asp-for="CheckOutTime" class="form-control" type="time" style="border: 1px solid #00adef;" />
                <span asp-validation-for="CheckOutTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OvertimeHours" class="control-label" style="color: #213d86;"><i class="fa fa-hourglass-half"></i> Giờ làm thêm</label>
                <input asp-for="OvertimeHours" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="OvertimeHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label" style="color: #213d86;"><i class="fa fa-check-circle-o"></i> Trạng thái</label>
                <input asp-for="Status" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label" style="color: #213d86;"><i class="fa fa-clock-o"></i> Thời gian tạo</label>
                <input asp-for="CreatedAt" class="form-control" type="datetime-local" style="border: 1px solid #00adef;" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Lưu" class="btn btn-primary" style="background-color: #00adef; border-color: #00adef;"><i class="fa fa-save"></i> Lưu</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color: #213d86;"><i class="fa fa-arrow-left"></i> Trở về danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}