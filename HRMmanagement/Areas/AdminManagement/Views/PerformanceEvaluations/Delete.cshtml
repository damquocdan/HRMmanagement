@model HRMmanagement.Models.PerformanceEvaluation

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fas fa-trash-alt"></i> Xóa</h1>

<h3 style="color: #213d86;">Bạn có chắc chắn muốn xóa đánh giá này?</h3>
<div>
    <h4 style="color: #213d86;"><i class="far fa-file-alt"></i> Chi tiết Đánh giá Hiệu suất</h4>
    <hr style="border-top: 1px solid #00adef;" />
    <dl class="row">
        <dt class="col-sm-2" style="color: #213d86;"><i class="far fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.EvaluationDate)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EvaluationDate)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-star-half-alt"></i> @Html.DisplayNameFor(model => model.SelfScore)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SelfScore)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-user-tie"></i> @Html.DisplayNameFor(model => model.ManagerScore)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ManagerScore)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-users"></i> @Html.DisplayNameFor(model => model.PeerScore)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PeerScore)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="far fa-comment"></i> @Html.DisplayNameFor(model => model.Comments)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comments)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="far fa-clock"></i> @Html.DisplayNameFor(model => model.CreatedAt)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Employee)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.FullName)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-user-check"></i> @Html.DisplayNameFor(model => model.Evaluator)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Evaluator.FullName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EvaluationId" />
        <input type="submit" value="Xóa" class="btn btn-danger" style="background-color: #00984b; border-color: #00984b;" />
        <a asp-action="Index" class="btn btn-outline-primary" style="color: #213d86; border-color: #00adef;">
            <i class="fas fa-arrow-left"></i> Trở về Danh sách
        </a>
    </form>
</div>

