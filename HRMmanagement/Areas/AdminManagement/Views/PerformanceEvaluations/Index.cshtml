@model IEnumerable<HRMmanagement.Models.PerformanceEvaluation>

@{
    ViewData["Title"] = "Đánh Giá Hiệu Suất";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fas fa-chart-bar"></i> Đánh Giá Hiệu Suất</h1>

<p>
    <a asp-action="Create" class="btn btn-success" style="background-color: #00984b; border-color: #00984b;"><i class="fas fa-plus"></i> Tạo Mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <i class="far fa-calendar-alt" style="color: #213d86;"></i> @Html.DisplayNameFor(model => model.EvaluationDate)
            </th>
            <th>
                <i class="fas fa-user-check" style="color: #213d86;"></i> @Html.DisplayNameFor(model => model.SelfScore)
            </th>
            <th>
                <i class="fas fa-user-tie" style="color: #213d86;"></i> @Html.DisplayNameFor(model => model.ManagerScore)
            </th>
            <th>
                <i class="fas fa-users" style="color: #213d86;"></i> @Html.DisplayNameFor(model => model.PeerScore)
            </th>
            <th>
                <i class="far fa-comment-dots" style="color: #213d86;"></i> @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                <i class="far fa-clock" style="color: #213d86;"></i> @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                <i class="fas fa-user" style="color: #213d86;"></i> @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                <i class="fas fa-user-cog" style="color: #213d86;"></i> @Html.DisplayNameFor(model => model.Evaluator)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EvaluationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SelfScore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManagerScore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PeerScore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Evaluator.FullName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EvaluationId" class="btn btn-primary btn-sm" style="background-color: #00adef; border-color: #00adef;"><i class="fas fa-edit"></i> Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.EvaluationId" class="btn btn-info btn-sm" style="background-color: #213d86; border-color: #213d86;"><i class="fas fa-info-circle"></i> Chi Tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.EvaluationId" class="btn btn-danger btn-sm" style="background-color: #f7941c; border-color: #f7941c;"><i class="fas fa-trash-alt"></i> Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">