@model HRMmanagement.Models.PerformanceEvaluation

@{
    ViewData["Title"] = "Tạo mới";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fas fa-plus-circle"></i> Tạo mới</h1>

<h4 style="color: #213d86;"><i class="far fa-file-alt"></i> Đánh giá Hiệu suất</h4>
<hr style="border-top: 1px solid #00adef;" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="border: 1px solid #f7941c; padding: 10px; border-radius: 5px; background-color: #fff3cd; color: #85640a;"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label" style="color: #213d86;"><i class="fas fa-user"></i> Nhân viên</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId" style="border: 1px solid #00adef;"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EvaluationDate" class="control-label" style="color: #213d86;"><i class="far fa-calendar-alt"></i> Ngày đánh giá</label>
                <input asp-for="EvaluationDate" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="EvaluationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EvaluatorId" class="control-label" style="color: #213d86;"><i class="fas fa-user-check"></i> Người đánh giá</label>
                <select asp-for="EvaluatorId" class="form-control" asp-items="ViewBag.EvaluatorId" style="border: 1px solid #00adef;"></select>
                <span asp-validation-for="EvaluatorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelfScore" class="control-label" style="color: #213d86;"><i class="fas fa-star-half-alt"></i> Điểm tự đánh giá</label>
                <input asp-for="SelfScore" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="SelfScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManagerScore" class="control-label" style="color: #213d86;"><i class="fas fa-user-tie"></i> Điểm quản lý</label>
                <input asp-for="ManagerScore" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="ManagerScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeerScore" class="control-label" style="color: #213d86;"><i class="fas fa-users"></i> Điểm đồng nghiệp</label>
                <input asp-for="PeerScore" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="PeerScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label" style="color: #213d86;"><i class="far fa-comment"></i> Bình luận</label>
                <input asp-for="Comments" class="form-control" style="border: 1px solid #00adef;" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="background-color: #00984b; border-color: #00984b;">
                    <i class="fas fa-save"></i> Lưu
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color: #213d86;">
        <i class="fas fa-arrow-left"></i> Trở về Danh sách
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

