@model HRMmanagement.Models.PerformanceEvaluation

@{
    ViewData["Title"] = "Chỉnh Sửa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fas fa-edit"></i> Chỉnh Sửa</h1>

<h4 style="color: #213d86;">Đánh Giá Hiệu Suất</h4>
<hr style="border-top: 1px solid #00adef;" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EvaluationId" />
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label" style="color: #213d86;"><i class="fas fa-user"></i> Nhân Viên</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EvaluationDate" class="control-label" style="color: #213d86;"><i class="far fa-calendar-alt"></i> Ngày Đánh Giá</label>
                <input asp-for="EvaluationDate" class="form-control" />
                <span asp-validation-for="EvaluationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EvaluatorId" class="control-label" style="color: #213d86;"><i class="fas fa-user-cog"></i> Người Đánh Giá</label>
                <select asp-for="EvaluatorId" class="form-control" asp-items="ViewBag.EvaluatorId"></select>
                <span asp-validation-for="EvaluatorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelfScore" class="control-label" style="color: #213d86;"><i class="fas fa-user-check"></i> Điểm Tự Đánh Giá</label>
                <input asp-for="SelfScore" class="form-control" />
                <span asp-validation-for="SelfScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManagerScore" class="control-label" style="color: #213d86;"><i class="fas fa-user-tie"></i> Điểm Quản Lý Đánh Giá</label>
                <input asp-for="ManagerScore" class="form-control" />
                <span asp-validation-for="ManagerScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeerScore" class="control-label" style="color: #213d86;"><i class="fas fa-users"></i> Điểm Đồng Nghiệp Đánh Giá</label>
                <input asp-for="PeerScore" class="form-control" />
                <span asp-validation-for="PeerScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label" style="color: #213d86;"><i class="far fa-comment-dots"></i> Bình Luận</label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label" style="color: #213d86;"><i class="far fa-clock"></i> Ngày Tạo</label>
                <input asp-for="CreatedAt" class="form-control" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Lưu" class="btn btn-primary" style="background-color: #00adef; border-color: #00adef;"><i class="fas fa-save"></i> Lưu</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary" style="color: #213d86;"><i class="fas fa-arrow-left"></i> Quay lại Danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">