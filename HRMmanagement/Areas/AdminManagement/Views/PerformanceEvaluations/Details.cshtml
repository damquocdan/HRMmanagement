@model HRMmanagement.Models.PerformanceEvaluation

@{
    ViewData["Title"] = "Chi Tiết";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 style="color: #213d86;"><i class="fas fa-info-circle"></i> Chi Tiết</h1>

<div>
    <h4 style="color: #213d86;">Đánh Giá Hiệu Suất</h4>
    <hr style="border-top: 1px solid #00adef;" />
    <dl class="row">
        <dt class="col-sm-2" style="color: #213d86;"><i class="far fa-calendar-alt"></i> Ngày Đánh Giá</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EvaluationDate)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-user-check"></i> Điểm Tự Đánh Giá</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SelfScore)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-user-tie"></i> Điểm Quản Lý Đánh Giá</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ManagerScore)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-users"></i> Điểm Đồng Nghiệp Đánh Giá</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PeerScore)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="far fa-comment-dots"></i> Bình Luận</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comments)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="far fa-clock"></i> Ngày Tạo</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-user"></i> Nhân Viên</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.EmployeeId)
        </dd>
        <dt class="col-sm-2" style="color: #213d86;"><i class="fas fa-user-cog"></i> Người Đánh Giá</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Evaluator.EmployeeId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.EvaluationId" class="btn btn-primary" style="background-color: #00adef; border-color: #00adef;"><i class="fas fa-edit"></i> Sửa</a> 
    <a asp-action="Index" class="btn btn-secondary" style="color: #213d86;"><i class="fas fa-arrow-left"></i> Quay lại Danh sách</a>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">